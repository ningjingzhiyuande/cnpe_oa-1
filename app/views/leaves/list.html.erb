<%=render "shared/leave_left"%>

<div id="main-wrapper">
	<div id="main-content">
		<%=render "shared/notice"%>
        <div class="title">
			<h3>请假列表(全部通过的)</h3>
		</div>

		
	
        <div class="hastable">
					
						<table id="datatable" class="display"> 
						<thead> 
						<tr>
							<th>#ID</th>
						    <th>请假标题</th> 
						    <th>总天数</th> 
					
						    <th>操作</th> 
							
						</tr> 
						</thead> 
						<tbody> 
						<% @leaves.each do |leave| %>
						<tr class="category_row" data-id="">
							<td class="center"><%=leave.id%></td> 
						    <td><%= leave.applicant.name %>的请假条</td> 
						    <td><%= leave.total_days %>天</td> 
				
						    <td><%= link_to "查看详情",leave %> | <%= link_to "修改请假",edit_leave_url(leave) %> </td> 					   			
						</tr> 
					   <%end%>			
						</tbody>
						</table>



</div>
</div>

